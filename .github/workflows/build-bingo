name: Build and Release BMCC Bingo Pack

on:
  workflow_dispatch:

jobs:
  build-bingo:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Read event number and version
        run: |
          EVENT_NUM=$(cat bmccEventNumber.txt)
          VERSION_FILE="bingoPack/version.txt"
          if [ ! -f "$VERSION_FILE" ]; then
              echo "1" > "$VERSION_FILE"
          fi
          VERSION=$(cat "$VERSION_FILE")
          echo "EVENT_NUM=$EVENT_NUM" >> $GITHUB_ENV
          echo "VERSION=$VERSION" >> $GITHUB_ENV

      - name: Update readme.txt
        run: |
          echo "Hi, this pack uses FAN-MADE assets and stolen ones from MCCI and MCC." > bingoPack/readme.txt
          echo "" >> bingoPack/readme.txt
          echo "We do not claim ownership of any of the assets used, taking assets from this pack is allowed however do not claim it is your own." >> bingoPack/readme.txt
          echo "" >> bingoPack/readme.txt
          echo "This pack is for BMCC $EVENT_NUM as version #$VERSION of the Bingo Pack" >> bingoPack/readme.txt

      - name: Create BINGO ZIP
        run: |
          rm -f BMCC-bingo.zip
          cd bingoPack
          zip -r ../BMCC-bingo.zip . -x "version.txt" ".git/*" ".github/*"

      - name: Generate SHA-1 hash
        run: |
          sha1sum BMCC-bingo.zip | awk '{ print $1 }' > BMCC-bingo.hash.txt

      - name: Upload BINGO ZIP and hash to release
        uses: softprops/action-gh
